{
	"compilerOptions": {
	  "target": "ES6",
	  "module": "commonjs",
	  "lib": ["ESNext"],
	  "sourceMap": true,
	  "outDir": "out",
	  "strict": true,
	  "noUnusedLocals": true,
	  "moduleResolution": "node",
	  "esModuleInterop": true,
	  "skipLibCheck": true,
	  "resolveJsonModule": true,
	  "forceConsistentCasingInFileNames": true
	},
	"include": [
		"src/**/*.json",
		"src/**/*.ts"
	],
	"exclude": [
	   "out",
	   "node_modules"
	]
  }
  