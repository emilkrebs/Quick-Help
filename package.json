{
	"name": "quickhelp",
	"displayName": "QuickHelp",
	"description": "Look up your problems. Fast.",
	"version": "1.0.2",
	"author": "Emil Krebs",
	"publisher": "EmilKrebs",
	"icon": "icon.png",
	"repository": "https://github.com/emilkrebs/Quick-Help",
	"engines": {
		"vscode": "^1.66.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:quickhelp.quickSearch",
		"onCommand:quickhelp.search"
	],
	"main": "./out/extension.js",
	"contributes": {
		"configuration": {
			"title": "Quick Help",
			"properties": {
				"quickhelp.searchEngine": {
					"type": "string",
					"enum": ["Google", "DuckDuckGo", "Bing", "Ecosia", "StackOverflow"],
					"default": "Google",
					"description": "The Search Engine you wan't to use."
				}
			}
		},
		"commands": [
			{
				"command": "quickhelp.search",
				"title": "Search Online"
			},
			{
				"command": "quickhelp.quickSearch",
				"title": "Quick search"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.66.0",
		"@types/glob": "^7.2.0",
		"@types/mocha": "^9.1.0",
		"@types/node": "14.x",
		"@typescript-eslint/eslint-plugin": "^5.12.1",
		"@typescript-eslint/parser": "^5.12.1",
		"eslint": "^8.9.0",
		"glob": "^7.2.0",
		"mocha": "^9.2.1",
		"typescript": "^4.5.5",
		"@vscode/test-electron": "^2.1.2"
	}
}